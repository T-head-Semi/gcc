# GCC testsuite that uses the `dg.exp' driver.

# Exit immediately if this isn't a RISC-V target.
if ![istarget riscv*-*-*] then {
  return
}

# Load support procs.
load_lib g++-dg.exp

# Initialize `dg'.
dg-init

if { [istarget riscv*musl*] } {
    # Main loop.
    if { [istarget riscv32*musl*] } {
      dg-runtest [lsort [glob -nocomplain $srcdir/$subdir/*rv32.C]] "-I$srcdir/$subdir/../ " ""
    } else {
      dg-runtest [lsort [lsearch -all -inline -not [glob -nocomplain $srcdir/$subdir/*.C] {*rv32.C}]] "-I$srcdir/$subdir/../ " ""
    }

    # All done.
    dg-finish
    return
}

# Main loop.
dg-runtest [lsort [glob -nocomplain $srcdir/$subdir/*.\[C\]]] \
	"-I$srcdir/$subdir/../ -O0" ""

# Main loop.
dg-runtest [lsort [glob -nocomplain $srcdir/$subdir/*.\[C\]]] \
	"-I$srcdir/$subdir/../ -O2" ""

# All done.
dg-finish
